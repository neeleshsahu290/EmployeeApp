<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EmployeeDetailsActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:text="Employee"/>
        <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#3A3939"
        android:layout_marginBottom="5dp"
        />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2.2">

                <TextView
                    android:text="Name"
                    android:layout_width="0dp"
                    android:textSize="18sp"
                    android:textColor="@color/text_color"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_weight="0.2" />

                <TextView
                    android:id="@+id/ename"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2.2">

                <TextView
                    android:text="Salary"
                    android:layout_width="0dp"
                    android:textSize="18sp"
                    android:textColor="@color/text_color"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_weight="0.2" />

                <TextView
                    android:id="@+id/salary"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2.2">

                <TextView
                    android:text="Earning salary"
                    android:layout_width="0dp"
                    android:textSize="18sp"
                    android:textColor="@color/text_color"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_weight="0.2" />

                <TextView
                    android:id="@+id/earning_salary"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2.2">

                <TextView
                    android:text="Present days"
                    android:layout_width="0dp"
                    android:textSize="18sp"
                    android:textColor="@color/text_color"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_weight="0.2" />

                <TextView
                    android:id="@+id/present_days"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    />
            </TableRow>
        </TableLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:text="Leave"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#3A3939"
            android:layout_marginBottom="5dp"
            />


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2.2">

                <TextView
                    android:text="Total leaves"
                    android:layout_width="0dp"
                    android:textSize="18sp"
                    android:textColor="@color/text_color"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_weight="0.2" />

                <TextView
                    android:id="@+id/total_leaves"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2.2">

                <TextView
                    android:text="Leave taken"
                    android:layout_width="0dp"
                    android:textSize="18sp"
                    android:textColor="@color/text_color"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_weight="0.2" />

                <TextView
                    android:id="@+id/leave_taken"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    />
            </TableRow>
        </TableLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/constraint"
        android:layout_height="match_parent"
        android:background="@color/white">
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_view_container"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:layout_margin="60dp"
            android:background="@color/white"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:src="@drawable/logo"/>

        </com.facebook.shimmer.ShimmerFrameLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>